<% @meta_title = "#{@package.name} maintainers | #{@registry.name}" %>

<div class="container-sm">

  <%= render 'details' %>

  <%= render 'tabs' %>

  <% if @maintainers.any? %>
    <%= render @maintainers %>
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
  <% else %>
    <div class="alert alert-info" role="alert">
      No maintainers found.
    </div>
  <% end %>

</div>